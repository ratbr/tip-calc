<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:id="@+id/btnTwentyPercent"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/btnFifteenPercent"
            android:layout_toRightOf="@+id/btnFifteenPercent"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:id="@+id/btnTenPercent"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnFifteenPercent"/>

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:id="@+id/btnFifteenPercent"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/btnTenPercent"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvTipAmt"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_column="0"
            android:layout_marginTop="44dp"
            android:layout_below="@+id/btnTwentyPercent"
            android:layout_centerHorizontal="true"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etCheckAmt"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tip is: "
            android:id="@+id/tvTipIs"
            android:layout_alignTop="@+id/tvTipAmt"
            android:layout_toLeftOf="@+id/tvTipAmt"
            android:layout_alignBottom="@+id/tvTipAmt"
            android:layout_alignLeft="@+id/etCheckAmt"/>

</RelativeLayout>
